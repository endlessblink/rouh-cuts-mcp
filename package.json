{
  "name": "@endlessblink/rough-cuts-mcp",
  "version": "2.2.0",
  "description": "Zero-setup Remotion video generation for Claude Desktop. Auto-installs projects, dependencies, and guidelines on first use.",
  "scripts": {
    "postinstall": "node setup-universal.js",
    "install-mcp": "node setup-universal.js",
    "dev": "remotion studio",
    "build": "remotion render",
    "preview": "remotion preview",
    "upgrade": "remotion upgrade",
    "build-mcp": "cd mcp-server && npm install && npm run build",
    "test-mcp": "cd mcp-server && npm run dev",
    "setup": "npm install && npm run build-mcp",
    "setup-universal": "npm install && npm run build-mcp && node setup-universal.js",
    "install-for-claude": "npm run setup-universal"
  },
  "main": "setup-universal.js",
  "bin": {
    "rough-cuts-install": "setup-universal.js"
  },
  "dependencies": {
    "@remotion/cli": "4.0.340",
    "@remotion/player": "4.0.340",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remotion": "4.0.340",
    "lucide-react": "^0.263.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "remotion",
    "video",
    "animation",
    "claude",
    "mcp",
    "ai",
    "video-generation",
    "motion-graphics",
    "react",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/endlessblink/rouh-cuts-mcp.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "mcp-server/",
    "claude-dev-guidelines/",
    "setup-universal.js",
    "remotion.config.ts",
    "tsconfig.json",
    "README.md"
  ]
}
